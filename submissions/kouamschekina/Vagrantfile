Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-24.04"
  
  # Private network with static IP
  config.vm.network "private_network", ip: "192.168.56.10"
  
  # VirtualBox provider configuration
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 2048
    vb.cpus = 2
  end
  
  # First, enable and configure cloud-init
  config.vm.provision "shell", inline: <<-SHELL
    echo "==> Enabling cloud-init..."
    
    # Install cloud-init if not present
    apt-get update
    DEBIAN_FRONTEND=noninteractive apt-get install -y cloud-init
    
    # Enable cloud-init services
    systemctl enable cloud-init-local.service
    systemctl enable cloud-init.service
    systemctl enable cloud-config.service
    systemctl enable cloud-final.service
    
    # Clean any previous cloud-init runs
    cloud-init clean --logs --seed
  SHELL
  
  # Copy user-data file
  config.vm.provision "file", 
    source: "cloud-init/user-data.yaml", 
    destination: "/tmp/user-data.yaml"
  
  # Set up cloud-init and run it
  config.vm.provision "shell", inline: <<-SHELL
    echo "==> Setting up cloud-init datasource..."
    
    # Create NoCloud datasource directory
    mkdir -p /var/lib/cloud/seed/nocloud-net
    
    # Copy user-data
    cp /tmp/user-data.yaml /var/lib/cloud/seed/nocloud-net/user-data
    
    # Create empty meta-data
    cat > /var/lib/cloud/seed/nocloud-net/meta-data <<EOF
instance-id: vagrant-local-$(date +%s)
local-hostname: vagrant
EOF
    
    # Configure cloud-init to use NoCloud datasource
    cat > /etc/cloud/cloud.cfg.d/90_dpkg.cfg <<EOF
datasource_list: [ NoCloud, None ]
EOF
    
    echo "==> Running cloud-init..."
    # Run cloud-init stages
    cloud-init init --local
    cloud-init init
    cloud-init modules --mode=config
    cloud-init modules --mode=final
    
    echo "==> Cloud-init complete!"
    cloud-init status --wait
  SHELL
end
